<form>
    <label name="partner" />
    <field name="partner" />
    <label name="number" />
    <field name="number" />
    <label name="bank_account"/>
    <field name="bank_account"/>
    <label name="date" />
    <field name="date" />
    <label name="amount" />
    <field name="amount" />
    <label name="description" />
    <field name="description" />
    <label name="journal" />
    <field name="journal" />
    <label name="payment_method" />
    <field name="payment_method" />
    <label name="currency" />
    <field name="currency" />
    <notebook colspan="6">
        <page string="Receipt" id="receipt" col="6">
            <group col="6" colspan="4" id="buttons">
                <label name="state"/>
                <field name="state"/>
                <button name="cancel" string="_Cancel"
                    icon="tryton-cancel"
                    confirm="Are you sure to cancel the receipt?"/>
                <button name="draft" string="_Draft"
                    icon="tryton-go-previous"/>
                <button name="confirmed" string="_Confirm"
                    icon="tryton-ok"/>
            </group>
        </page>
    <page string="Other Info" id="info">
        <label name="company"/>
        <field name="company"/>
        <label name="account" />
        <field name="account" />
        <label name="account_expense" />
        <field name="account_expense" />
        <label name="confirmed_move"/>
        <field name="confirmed_move"/>
        <label name="paid_move"/>
        <field name="paid_move"/>
        <label name="accounting_date"/>
        <field name="accounting_date"/>
      </page>
    </notebook>
</form>
